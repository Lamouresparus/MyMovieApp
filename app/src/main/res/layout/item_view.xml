<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/movie_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/movie_poster"
        android:importantForAutofill="yes|auto"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/favourites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_favorite_24dp"
        android:drawableLeft="@drawable/ic_favorite_24dp"
        app:layout_constraintEnd_toEndOf="@+id/movie_image_view"
        app:layout_constraintTop_toTopOf="@+id/movie_image_view"
        android:textColor="@android:color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>